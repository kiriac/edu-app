{
  "include": ["app/**/*", "client/src/**/*", "shared/**/*", "server/**/*", "components/**/*", "types/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*", "./client/src/components/*"],
      "@shared/*": ["./shared/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
